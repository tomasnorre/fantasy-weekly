{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "deployer/deployer": "v7.0.0-beta.20",
        "fideloper/proxy": "^4.4",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.3",
        "laravel/framework": "^8.12",
        "laravel/tinker": "^2.5"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1.0",
        "codeception/module-webdriver": "^1.0.0",
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.9.1",
        "laravel/sail": "^1.0.1",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^5.0",
        "pestphp/pest": "^1.0",
        "phpstan/phpstan": "^0.12.84",
        "phpunit/phpunit": "^9.3.3",
        "rector/rector": "0.10.11",
        "symplify/easy-coding-standard": "9.2.19",
        "vimeo/psalm": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "code:analyse": [
            "[ -e vendor/bin/phpstan ] || composer update",
            "vendor/bin/phpstan analyse"
        ],
        "code:analyse-baseline": [
            "[ -e vendor/bin/phpstan ] || composer update",
            "vendor/bin/phpstan analyse --generate-baseline"
        ],
        "code:style": [
            "[ -e vendor/bin/ecs ] || composer update",
            "vendor/bin/ecs check"
        ],
        "code:style-fix": [
            "[ -e vendor/bin/ecs ] || composer update",
            "vendor/bin/ecs check --fix"
        ],
        "code:psalm": [
            "[ -e vendor/bin/psalm ] || composer update",
            "vendor/bin/psalm"
        ],
        "code:rector": [
            "[ -e vendor/bin/rector ] || composer update",
            "vendor/bin/rector --dry-run"
        ],
        "code:static": [
            "@code:analyse",
            "@code:psalm",
            "@code:rector"
        ],
        "test:unit": [
            "[ -e vendor/bin/phpunit ] || composer update",
            "vendor/bin/phpunit"
        ],
        "test:all": [
            "@test:unit"
        ],
        "pest:unit": [
            "[ -e vendor/bin/pest ] || composer update",
            "XDEBUG_MODE='coverage' ./vendor/bin/pest --coverage"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "deploy": [
            "[ -e vendor/bin/dep ] || composer update",
            "vendor/bin/dep deploy"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
